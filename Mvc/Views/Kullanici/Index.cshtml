
@model List<Entities.Concrete.Kullanici>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kullanıcılar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Kullanıcılar</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <a class="btn btn-default" href="/Kullanici/Yeni">+ Yeni Kullanıcı</a>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kulanıcı Listesi</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Kullanıcı Adi</th>
                                <th>E Posta</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.KullaniciId</td>
                                    <td>@item.KullaniciAdi</td>
                                    <td>@item.Eposta</td>
                                    <td>@item.Ad</td>
                                    <td>@item.Soyad</td>
                                    <td>
                                        <a class="btn btn-info btn-sm" href="/Kullanici/Degistir/@item.KullaniciId">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Değiştir
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Kullanici/Sil/@item.KullaniciId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
