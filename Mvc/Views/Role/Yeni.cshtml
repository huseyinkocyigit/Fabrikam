@model Entities.Concrete.Role
@{
    ViewData["Title"] = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Horizontal Form</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" action="/Role/Yeni" method="post">
        <div class="card-body">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Role Adı</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="RoleAd" placeholder="Role Adı">
                </div>
            </div>

        </div>
        @ViewBag.Hata
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Kaydet</button>
            <button type="submit" class="btn btn-default float-right">Cancel</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->
